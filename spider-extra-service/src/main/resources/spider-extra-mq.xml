<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="extraSpiderConsumer" name="extraSpiderConsumer" class="com.alibaba.rocketmq.client.consumer.DefaultMQPushConsumer" destroy-method="shutdown">
        <property name="namesrvAddr" value="${core.mq.host}"/>
        <property name="consumerGroup" value="${extra.mq.producerGroup}"/>
        <property name="consumeThreadMin" value="${extra.mq.thread.min}"/>
        <property name="consumeThreadMax" value="${extra.mq.thread.max}"/>
    </bean>


</beans>