<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="Bank">
	<resultMap class="Bank" id="RM-Bank">
		<result column="Id" property="id" />
		<result column="WebsiteId" property="websiteId" />
		<result column="BankName" property="bankName" />
		<result column="BankEmailAddr" property="bankEmailAddr" />
		<result column="IsEnabled" property="isEnabled" />
	</resultMap>

	<select id="getAllBank" resultMap="RM-Bank">
		SELECT b.*,BankEmailAddr FROM T_BANK b,T_BANK_EMAIL WHERE IsEnabled='true' AND BankId=b.Id;
	</select>

</sqlMap>
	