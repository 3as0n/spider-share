<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>${project.version}</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>/rawdata/</baseDirectory>
	<fileSets>
		<fileSet>
			<outputDirectory>/install</outputDirectory>
			<directory>install</directory>
		</fileSet>
		<fileSet>
			<outputDirectory>/bin</outputDirectory>
			<directory>bin</directory>
		</fileSet>
		<fileSet>
			<outputDirectory>/plugin</outputDirectory>
			<directory>plugin</directory>
		</fileSet>
		<fileSet>
			<outputDirectory>/conf</outputDirectory>
			<directory>rawdata-main/src/main/resources/</directory>
			<excludes>
				<exclude>*.properties</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<outputDirectory>/logs</outputDirectory>
			<directory>logs</directory>
			<excludes>
				<exclude>*.log</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<outputDirectory>/lib</outputDirectory>
			<directory>rawdata-main/target/lib/</directory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>PROG_VERSION.def</source>
			<outputDirectory>/rawdata/</outputDirectory>
		</file>
		<file>
			<source>rawdata-main/target/rawdata-main-${project-version}.jar</source>
			<outputDirectory>/rawdata/</outputDirectory>
			<destName>rawdata-main.jar</destName>
		</file>
	</files>
</assembly>