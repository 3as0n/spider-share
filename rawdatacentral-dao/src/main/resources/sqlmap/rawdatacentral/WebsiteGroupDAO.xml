<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.datatrees.rawdatacentral.dao.WebsiteGroupDAO">

    <select id="queryMaxWeightWebsite" resultType="com.datatrees.rawdatacentral.domain.model.WebsiteGroup">
        select * from website_group where group_code = #{groupCode} order by weight desc limit 1;
    </select>

    <!--
    这个sql很重要
    select a.* from website_group a right join  (select group_code,max(weight) as weight from website_group group by group_code) b on a.group_code = b.group_code and a.weight = b.weight ;
    -->

</mapper>