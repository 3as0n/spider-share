<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
         http://www.springframework.org/schema/context
         http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!-- BeanFactoryPostProcessor use for eager initialize -->
    <bean class="com.github.diamond.client.extend.init.DRMInitBeanFactoryPostProcessor"/>

    <!-- FactoryBean启动netty客户端 -->
    <bean id="propertiesConfiguration" class="com.github.diamond.client.PropertiesConfigurationFactoryBean"
          destroy-method="close">
        <constructor-arg index="0">
            <list>
                <!-- 监听器，用于触发资源的动态切换 -->
                <bean class="com.github.diamond.client.extend.listener.ConfigurationChangeListener"/>
            </list>
        </constructor-arg>
    </bean>

    <!--<bean id="propertySourcesPlaceholderConfigurer"-->
