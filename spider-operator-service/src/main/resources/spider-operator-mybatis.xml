<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">


    <bean id="operatorSessionFactoryBean" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="spiderDataSource"/>
        <property name="mapperLocations">
            <list>
                <value>classpath*:sqlmap/spider/operator/*DAO.xml</value>
                <value>classpath*:sqlmap/spider/operator/mapper/*Mapper.xml</value>
            </list>
        </property>
        <!--<property name="typeAliasesPackage" value="com.datatrees.spider.domain.model.example"/>-->
        <property name="configLocation" value="classpath:spider-operator-mybatis-config.xml"/>
    </bean>

    <bean id="operatorSqlsessionTemplate" class="org.mybatis.spring.SqlSessionTemplate">
        <constructor-arg index="0" ref="operatorSessionFactoryBean"/>
    </bean>


    <bean id="operatorMapperScannerConfigurer" class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="annotationClass" value="javax.annotation.Resource"/>
        <property name="basePackage" value="com.datatrees.spider.operator.dao"/>
        <property name="sqlSessionFactoryBeanName" value="operatorSessionFactoryBean"/>
        <property name="sqlSessionTemplateBeanName" value="operatorSqlsessionTemplate"/>

    </bean>


</beans>