<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">


    <bean id="bankSessionFactoryBean" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="rawdatacentralDataSource"/>
        <property name="mapperLocations">
            <list>
                <value>classpath*:sqlmap/spider/bank/*DAO.xml</value>
                <value>classpath*:sqlmap/spider/bank/mapper/*Mapper.xml</value>
            </list>
        </property>
        <!--<property name="typeAliasesPackage" value="com.datatrees.rawdatacentral.domain.model.example"/>-->
        <property name="configLocation" value="classpath:spider-ecommerce-mybatis-config.xml"/>
    </bean>

    <bean id="bankSqlsessionTemplate" class="org.mybatis.spring.SqlSessionTemplate">
        <constructor-arg index="0" ref="bankSessionFactoryBean"/>
    </bean>


    <bean id="bankNapperScannerConfigurer" class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="annotationClass" value="javax.annotation.Resource"/>
        <property name="basePackage" value="com.datatrees.spider.bank.dao"/>
        <property name="sqlSessionFactoryBeanName" value="bankSessionFactoryBean"/>
        <property name="sqlSessionTemplateBeanName" value="bankSqlsessionTemplate"/>

    </bean>


</beans>