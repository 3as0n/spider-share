<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <bean id="loginInfoMqConsumer" class="com.alibaba.rocketmq.client.consumer.DefaultMQPushConsumer"
          destroy-method="shutdown">
        <property name="instanceName" value="rawdatacentral_logininfo" />
        <property name="namesrvAddr" value="${core.mq.host}"/>
        <property name="consumerGroup" value="${core.mq.loginInfo.consumerGroup}"/>
        <property name="consumeThreadMin" value="${collector.core.instance.num}"/>
        <property name="consumeThreadMax" value="${collector.instance.num}"/>
        <property name="consumeName" value="${collector.consume.name}"/>
        <property name="adjustThreadPoolNumsThreshold" value="${collector.adjust.threshold}"/>
    </bean>

    <bean id="loginInfoMessageListener" class="com.datatrees.rawdatacentral.collector.listener.LoginInfoMessageListener"
          init-method="init">
        <property name="mqConsumer" ref="loginInfoMqConsumer"/>
        <property name="collector" ref="collector"/>
        <property name="redisTemplate" ref="stringRedisTemplate"/>
        <property name="topicJson" value="${core.message.loginInfo.topic}"/>
    </bean>

</beans>